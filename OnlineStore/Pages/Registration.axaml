<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OnlineStore.Registration"
			 Background="#252746">

	<UserControl.Styles>
		<StyleInclude Source="/Styles/RegistrationWindowStyle.axaml"></StyleInclude>
	</UserControl.Styles>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="TBHeader"
						   Classes="Mimo"
						   Text="Store"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Top"
				   Margin="10"
				   FontSize="40"/>
		<Button x:Name="BTBack"
				Classes="BTBack"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="10"
				Content="Back"
				Width="60"
				Height="30"
				Click="Button_Click_8">
			<TextBlock Classes="TBBack"
					   Text="Back"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"/>
		</Button>
		<Viewbox Grid.Row="1"
				 VerticalAlignment="Top">
			<Grid >
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>


				<TextBlock x:Name="TBRegistration"
								   Classes="Registration"
						   HorizontalAlignment="Center"
						   Grid.Row="1"
						   Grid.ColumnSpan="2"
					 Margin="0 20 0 0">

					Registration
				</TextBlock>

				<TextBox x:Name="TBSurname"
						  Grid.Row="2"
						 Grid.Column="0"
						 Text="Enter your surname"
						 GotFocus="TextBox_GotFocus_2"
						 LostFocus="TextBox_LostFocus_4"
						 Classes="Email"></TextBox>
				<TextBox x:Name="TBName"
						  Grid.Row="3"
						 Grid.Column="0"
						 Text="Enter your name"
						 GotFocus="TextBox_GotFocus_3"
						 LostFocus="TextBox_LostFocus_5"
						 Classes="Password"></TextBox>
				
				<TextBox x:Name="TBEmail"
						 Grid.Row="2"
						 Grid.Column="1"
								 Classes="Email"
								 Text="Enter your email"
								 GotFocus="TextBox_GotFocus"
						
								 LostFocus="TextBox_LostFocus"></TextBox>
			
				<TextBox x:Name="TBPassword"
						  Grid.Row="3"
						 Grid.Column="1"
						 Text="Enter your password"
						 GotFocus="TextBox_GotFocus_1"
						 LostFocus="TextBox_LostFocus_1"
						 Classes="Password"></TextBox>

				<TextBox x:Name="TBPhone"
						  Grid.Row="4"
						 Grid.Column="1"
						 Text="Enter your phone"
						 GotFocus="TextBox_GotFocus_4"
						 LostFocus="TextBox_LostFocus_6"
						 Classes="Password"></TextBox>

				<TextBox x:Name="TBPatronymic"
						  Grid.Row="4"
						 Text="Enter your patronymic"
						 GotFocus="TextBox_GotFocus_5"
						 LostFocus="TextBox_LostFocus_7"
						 Classes="Password"></TextBox>

				<Button x:Name="BTSignGoogle"
						Margin="0 10 0 20"
						 Grid.Row="5"
						Grid.ColumnSpan="2"
						Click="Button_Click_3"
						HorizontalAlignment="Center"
						Classes="ButtonRegistration">
					<TextBlock x:Name="TextBlockRegistration"
							   Classes="TextBlockRegistration"
							   Text="Sign up"></TextBlock>
				</Button>
			</Grid>
		</Viewbox>
	</Grid>
	
</UserControl>
