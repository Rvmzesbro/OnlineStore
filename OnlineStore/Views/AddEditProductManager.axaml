<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OnlineStore.AddEditProductManager"
        Title="AddEditProductManager"
		Background="#252746">

	<Window.Styles>
		<StyleInclude Source="/Styles/ProductAddEditStyle.axaml"></StyleInclude>
	</Window.Styles>

	<Viewbox Margin="70">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0"
						Margin="0 0 5 0">
				<TextBlock Text="Name"
						   Classes="TBBack"/>
				<TextBox Classes="Email"
						 Margin="0 0 0 10"
						 x:Name="TBName"
						 Text="{Binding Product.Name}"
						 Watermark="Enter name"/>
				<TextBlock Text="Description"
						   Classes="TBBack"/>
				<TextBox Classes="Email"
						 Margin="0 0 0 10"
						 x:Name="TBDescription"
						 Text="{Binding Product.Description}"
						 Watermark="Enter description"/>

				<TextBlock Text="Image"
                           Classes="TBBack"
                           Margin="0 0 0 5"/>
				<StackPanel Orientation="Horizontal" Spacing="10">
					<Button x:Name="BTLoadImage"
                            Classes="BTBack"
                            Height="30"
                            Click="BTLoadImage_Click">
						<TextBlock Classes="TBBack"
                                   Text="Load Image"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
					</Button>
					<Button x:Name="BTClearImage"
                            Classes="BTBack"
                            Height="30"
                            Click="BTClearImage_Click"
                            IsVisible="False">
						<TextBlock Classes="TBBack"
                                   Text="Clear"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
					</Button>
				</StackPanel>

				<Border BorderBrush="#252746"
                        BorderThickness="1"
                        Background="#252746"
                        Height="120"
                        Margin="0 10 0 10"
                        HorizontalAlignment="Left">
					<StackPanel>
						<Image x:Name="ImagePreview"
                           Stretch="Uniform"
                           MaxHeight="100"
                           MaxWidth="150"/>
						<TextBlock x:Name="TBNoImage"
								   Text="No image"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Center"
								   Classes="TBBack"/>
					</StackPanel>

				</Border>

				<Button x:Name="BTAdd"
				Classes="BTBack"
				HorizontalAlignment="Left"
				
				Width="70"
				Height="30"
				Click="Button_Click">
					<TextBlock Classes="TBBack"
							   Text="Click"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>
			</StackPanel>
			<StackPanel Grid.Column="1">
				<TextBlock Text="Category"
						   Classes="TBBack"/>
				<ComboBox x:Name="CBCategory"
						  SelectedItem="{Binding Product.Category}"
						  Margin="0 0 0 10"
						  Height="30"
						  Width="200"
						  Classes="Category"/>
				<TextBlock Text="Count"
						   Classes="TBBack"/>
				<TextBox Classes="Email"
						 Margin="0 0 0 10"
						 x:Name="TBCount"
						 Watermark="Enter count"
						 Text="{Binding Count}"
						 IsReadOnly="{Binding IsEditingMode}"/>
				<TextBlock Text="Price"
						   Classes="TBBack"/>
				<TextBox Classes="Email"
						 Margin="0 0 0 10"
						 x:Name="TBPrice"
						 Watermark="Enter price"
						 Text="{Binding Product.Price}"
						 IsReadOnly="{Binding IsEditingMode}"/>

			</StackPanel>
		</Grid>
	</Viewbox>
	
</Window>
